            <button class="inline-block bg-secondary hover:bg-secondary/90 text-white font-black text-2xl py-6 px-16 rounded-full shadow-2xl btn-pulse-big transition-all duration-300 mb-6" onclick="downloadApp()">
                <i class="fa fa-download mr-2"></i>ç«‹å³ä¸‹è½½ é©¬ä¸Šé¢†
            </button>
            <p class="text-white/70 text-sm">
                *æ´»åŠ¨è§„åˆ™ï¼šæ–°ç”¨æˆ·ä¸“äº«ï¼Œæ¯ä½ç”¨æˆ·é™é¢†1æ¬¡ï¼Œå…¨å›½åŒ…é‚®ï¼Œé¢†å®Œå³æ­¢ï¼
            </p>
        </div>
    </section>

    <!-- é¡µè„š -->
    <footer class="bg-dark text-white/70 py-6 px-4 text-center text-xs">
        <div class="container mx-auto">
            <p>Â© 2025 ç”Ÿé²œä¼˜é€‰ ç‰ˆæƒæ‰€æœ‰ | é£Ÿå“ç»è¥è®¸å¯è¯ï¼šXXXXXXX</p>
            <p class="mt-2">å®¢æœçƒ­çº¿ï¼š400-XXXX-XXXX | æœ¬æ´»åŠ¨æœ€ç»ˆè§£é‡Šæƒå½’æœ¬å…¬å¸æ‰€æœ‰</p>
        </div>
    </footer>

    <script>
        // æç®€ç‰ˆä¸‹è½½å‡½æ•° - è·³è½¬å¤–éƒ¨ä¸‹è½½é“¾æ¥
        function downloadApp() {
            try {
                // ç›´æ¥è·³è½¬è‡³æŒ‡å®šå¤–éƒ¨ä¸‹è½½é“¾æ¥
                const downloadUrl = 'https://dp.msht2.top/';
                window.location.href = downloadUrl;
            } catch (e) {
                // å¼‚å¸¸å¤„ç†ï¼šå¦‚æœè·³è½¬å¤±è´¥ï¼Œå†æ¬¡å°è¯•
                const downloadUrl = 'https://dp.msht2.top/';
                window.open(downloadUrl, '_blank');
            }
        }

        // å€’è®¡æ—¶åŠŸèƒ½ï¼ˆåŒå€’è®¡æ—¶åŒæ­¥ï¼‰
        function updateCountdown() {
            // è®¾ç½®ç»“æŸæ—¶é—´ï¼ˆ2å°æ—¶18åˆ†åï¼‰
            const endTime = new Date();
            endTime.setHours(endTime.getHours() + 2);
            endTime.setMinutes(endTime.getMinutes() + 18);
            
            const timer = setInterval(() => {
                const now = new Date();
                const diff = endTime - now;
                
                if (diff <= 0) {
                    clearInterval(timer);
                    // å€’è®¡æ—¶ç»“æŸåæ›´æ–°æ–‡æ¡ˆ
                    document.querySelectorAll('.countdown-number').forEach(el => {
                        el.textContent = '00';
                    });
                    document.querySelector('h2.text-[clamp(1.5rem,7vw,2.5rem)]').textContent = 'æ´»åŠ¨å·²ç»“æŸï¼';
                    return;
                }
                
                const hours = Math.floor(diff / (1000 * 60 * 60)).toString().padStart(2, '0');
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60)).toString().padStart(2, '0');
                const seconds = Math.floor((diff % (1000 * 60)) / 1000).toString().padStart(2, '0');
                
                // æ›´æ–°ä¸»å€’è®¡æ—¶
                document.getElementById('hours').textContent = hours;
                document.getElementById('minutes').textContent = minutes;
                document.getElementById('seconds').textContent = seconds;
                
                // æ›´æ–°é¡¶éƒ¨æ‚¬æµ®å€’è®¡æ—¶
                document.getElementById('top-hours').textContent = hours;
                document.getElementById('top-minutes').textContent = minutes;
                document.getElementById('top-seconds').textContent = seconds;
            }, 1000);
        }
        
        // æ»šåŠ¨åŠ¨ç”»
        function initScrollAnimation() {
            const fadeElements = document.querySelectorAll('.fade-in');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                    }
                });
            }, {
                threshold: 0.1
            });
            
            fadeElements.forEach(el => {
                observer.observe(el);
            });
        }

        // é€€å‡ºæŒ½ç•™åŠŸèƒ½
        function initExitIntent() {
            const exitModal = document.getElementById('exit-modal');
            const confirmExit = document.getElementById('confirm-exit');
            let hasShown = false;

            // ç›‘å¬é¼ æ ‡ç¦»å¼€é¡µé¢ï¼ˆPCç«¯ï¼‰
            document.addEventListener('mouseleave', (e) => {
                if (e.clientY < 0 && !hasShown) {
                    showExitModal();
                }
            });

            // ç›‘å¬æ»‘åŠ¨è¿”å›ï¼ˆç§»åŠ¨ç«¯æ ¸å¿ƒï¼‰
            let touchStartY = 0;
            document.addEventListener('touchstart', (e) => {
                touchStartY = e.touches[0].clientY;
            });

            document.addEventListener('touchmove', (e) => {
                const touchY = e.touches[0].clientY;
                // ä»é¡¶éƒ¨å‘ä¸Šæ»‘åŠ¨ï¼ˆè¿”å›æ‰‹åŠ¿ï¼‰
                if (touchY - touchStartY > 50 && window.scrollY < 100 && !hasShown) {
                    showExitModal();
                    e.preventDefault();
                }
            });

            // æ˜¾ç¤ºé€€å‡ºå¼¹çª—
            function showExitModal() {
                hasShown = true;
                exitModal.style.display = 'flex';
                // ç¦æ­¢èƒŒæ™¯æ»šåŠ¨
                document.body.style.overflow = 'hidden';
            }

            // ç¡®è®¤é€€å‡º
            confirmExit.addEventListener('click', () => {
                exitModal.style.display = 'none';
                document.body.style.overflow = 'auto';
            });
        }
        
        // é¡µé¢åŠ è½½å®Œæˆååˆå§‹åŒ–
        document.addEventListener('DOMContentLoaded', () => {
            updateCountdown();
            initScrollAnimation();
            initExitIntent();
        });
    </script>
</body>
</html>
